{
    "enabled": true,
    "timezone": "Europe/Helsinki",
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate Dashboard",
    "commitBody": "Signed-off-by: terotuomala",
    "suppressNotifications": ["prIgnoreNotification"],
    "rebaseWhen": "conflicted",
    "assignees": ["@terotuomala"],

    "extends": [
      "config:base"
    ],

    "packageRules": [
      {
        "matchDatasources": ["docker"],
        "matchPackageNames": ["node/14-alpine"],
        "matchUpdateTypes": ["digest"],
        "commitMessageTopic": "container image {{depName}}",
        "commitMessageExtra": "to {{#if isSingleVersion}}v{{{toVersion}}}{{else}}{{{newValue}}}{{/if}}",
        "labels": ["renovate/image-release", "dependency/digest"],
        "pinDigests": true,
        "enabled": true

      },
      {
        "matchDatasources": ["npm"],
        "matchDepTypes": ["dependencies", "devDependencies"],
        "updateTypes": ["minor", "patch"],
        "enabled": true
      }
    ]
  }
